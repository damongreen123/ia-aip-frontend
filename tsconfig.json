{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true, // do not check types in node_modules folder
    "target": "esnext",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
